<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_save"
        android:text="保存"
        android:layout_margin="20dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="4dp"
        android:ems="1"
        android:background="@drawable/gridding_bigger"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hewking.develop.widget.ShadowLayout
        android:id="@+id/shadowLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:hl_cornerRadius="10dp"
        app:hl_dy="3dp"
        app:hl_shadowColor="#ffdcca90"
        app:hl_shadowLimit="8dp"
        app:hl_topShow="false"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:text="城市"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

    </com.hewking.develop.widget.ShadowLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="4dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:text="城市"
            android:paddingHorizontal="3dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <com.hewking.develop.widget.YYShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:yc_cornerRadius="12dp"
        app:yc_dx="0dp"
        app:yc_dy="3dp"
        app:yc_shadowColor="#cc6782F7"
        app:yc_shadowLimit="5dp">

        <com.hewking.develop.widget.QMUIVerticalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"
            android:background="@drawable/shape_show_"
            android:paddingHorizontal="3dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            android:textSize="12sp"
            />
    </com.hewking.develop.widget.YYShadowLayout>


</LinearLayout>